;
; BIND data file for <%= @name %> zone
; Managed by puppet
;
$ORIGIN <%= @name %>.
$TTL	604800
@	IN	SOA	<%= @fqdn %>. root.<%= @fqdn %>. (
			      1		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;
@	IN	NS	<%= @fqdn %>.
;
<% if not @name.end_with? '.in-addr.arpa' -%>
<%= @hostname %>	IN	A	<%= @ipaddress %>
<% end -%>
